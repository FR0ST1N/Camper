<!DOCTYPE html>
<html>
  <head>
    <title>Add Image</title>
    <meta name="description" content="Pinterest Clone">
    <link id="favicon" rel="icon" href="https://glitch.com/edit/favicon-app.ico" type="image/x-icon">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <style>
      .align-cen {
            align-items: center;
            justify-content: center;
        }
      .res-img {
            width: 50%;
            height: auto;
            max-width: 300px;
        }
    </style>
  </head>
  <body>
   
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <header class="mdl-layout__header" style="box-shadow: none;">
    <div class="mdl-layout__header-row">
      <span class="mdl-layout-title">Pinterest Clone</span>
      <div class="mdl-layout-spacer"></div>
    </div>
  </header>
  <div class="mdl-layout__drawer">
    <span class="mdl-layout-title">Menu</span>
    <nav class="mdl-navigation">
      <%if(auth){%>
        <a class="mdl-navigation__link" href="/"><i class="material-icons">home</i>&nbsp;Home</a>
        <a class="mdl-navigation__link" href="/user/<%=user%>"><i class="material-icons">account_circle</i>&nbsp;Profile</a>
        <a class="mdl-navigation__link" href="/add"><i class="material-icons">collections</i>&nbsp;Add Image</a>
        <a class="mdl-navigation__link" href="/logout/twitter"><i class="material-icons">highlight_off</i>&nbsp;Logout</a>
      <%}else{%>
        <a class="mdl-navigation__link" href="/login/twitter"><i class="material-icons">face</i>&nbsp;Login</a>
        <a class="mdl-navigation__link" href="/"><i class="material-icons">home</i>&nbsp;Home</a>
      <%}%>
    </nav>
  </div>
  <main class="mdl-layout__content">
    <div class="page-content">
      <form action="/new/image" method="post" class="mdl-layout align-cen mdl-js-layout">
        <img src="https://cdn.glitch.com/118cf582-b64c-4c35-9934-d96eff60a781%2Fplaceholder.png?1519915764667" id="addImage" class="res-img">
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="text" id="imgURL" name="imgURL" required>
          <label class="mdl-textfield__label" for="imgURL">URL</label>
        </div>
        <div>
        <button type="button" class="mdl-button mdl-js-button" onclick="verifyImg();">
        Verify
          </button>
        <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent" id="subBut" disabled>
          Submit
      </button>
        </div>
      </form>
    </div>
  </main>
</div>
    
    <!-- Your web-app is https, so your scripts need to be too -->
    <script src="https://code.jquery.com/jquery-2.2.1.min.js"
            integrity="sha256-gvQgAFzTH6trSrAWoH1iPo9Xc96QxSZ3feW6kem+O00="
            crossorigin="anonymous"></script>
    <script>
    var url_input = document.getElementById('imgURL');
    var imgEle = document.getElementById('addImage');
    var submit_but = document.getElementById('subBut');
    var trigger = 0;
    var default_img = "https://cdn.glitch.com/118cf582-b64c-4c35-9934-d96eff60a781%2Fplaceholder.png?1519915764667";
    imgEle.onerror = function (){
      imgEle.src = default_img;
      submit_but.disabled = true;
    }
    $(url_input).on('input',function(e){
       imgEle.src = url_input.value;
    });
    function verifyImg(){
     if(imgEle.src != default_img){
       submit_but.disabled = false;
     }else{
       alert('Invalid URL');
       submit_but.disabled = true;
     }
    }
    </script>
  </body>
</html>
